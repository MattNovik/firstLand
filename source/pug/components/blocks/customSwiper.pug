

mixin customSwiper(data)
  section.custom-swiper
    .custom-swiper__container
      p.custom-swiper__help-text#reviewsTitle Отзывы
      h2.custom-swiper__title Что о нас говорят студенты?
      .swiper#reviews
        .swiper-wrapper
          each item, index in data
            .swiper-slide
              .custom-swiper__item-wrapper
                p.custom-swiper__item-text= item.text
                  +icon('icon-braces', 20,20).custom-swiper__item-braces
                .custom-swiper__avatar-wrapper
                  if index === 0
                    +picture('content', 'reviewFirst', 'jpg',72,72,'avatar')
                  else if index === 1
                    +picture('content', 'reviewSecond', 'jpg',72,72,'avatar')
                  else if index === 2
                    +picture('content', 'reviewThird', 'jpg',72,72,'avatar')
                  else if index === 3
                    +picture('content', 'reviewFourth', 'jpg',72,72,'avatar')
                  else if index === 4
                    +picture('content', 'reviewFirth', 'jpg',72,72,'avatar')
                  else
                    +picture('content', 'reviewFirst', 'jpg',72,72,'avatar')
                  .custom-swiper__avatar-text-wrapper
                    p.custom-swiper__avatar-name= item.name
                    p.custom-swiper__avatar-theme= item.theme
        .swiper-pagination
        button.swiper-button-next(type="button")
          +icon('icon-arrowLong',20,20)
        button.swiper-button-prev(type="button")
          +icon('icon-arrowLong',20,20)
